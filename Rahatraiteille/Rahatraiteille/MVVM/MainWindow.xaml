<Window x:Class="Rahatraiteille.MVVM.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewModel="clr-namespace:Rahatraiteille.MVVM.ViewModel" 
        xmlns:view="clr-namespace:Rahatraiteille.MVVM.View"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">

    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModel:EtusivuViewModel}">
                <view:Etusivu_sivu/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
