<Window x:Class="Rahatraiteille.Sivut.Tarkastele_sivu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rahatraiteille.Sivut"
        mc:Ignorable="d"
        Title="Tarkastele_sivu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Add PieChart" Click="Add_PieChart_Click" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>

        <lvc:CartesianChart Grid.Row="1" Name="pieChart" Width="200" Height="200">
            <lvc:PieSeries Title="Pie Series" Values="{Binding ChartValues}" DataLabels="True"/>
        </lvc:CartesianChart>
    </Grid>
</Window>