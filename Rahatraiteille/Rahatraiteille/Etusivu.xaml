<Window x:Class="Rahatraiteille.Etusivu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rahatraiteille"
        mc:Ignorable="d"
        Title="Etusivu" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel AllowDrop="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Etusivu">
                <MenuItem Header="Etusivulla näet menojesi yhteenvedon" />
            </MenuItem>
            <MenuItem Header="Luo kirjaus">
                <MenuItem Header="Tällä sivulla voit kirjata menon, ja tarkastella muutamaa edellistä menoa."/>
            </MenuItem>
            <MenuItem Header="Kategoriat">
                <MenuItem Header="Tällä sivulla voit tarkastella kategorioita, luoda ja poistaa niitä."/>
            </MenuItem>
            <MenuItem Header="Tarkastele">
                <MenuItem Header="Tarkastele tarkemmin menojasi käyttäen filttereitä."/>
            </MenuItem>
        </Menu>
        <Grid>
            <TextBox AcceptsReturn="True" Background="#FFD3D9BD"/>
        </Grid>
    </DockPanel>
</Window>
