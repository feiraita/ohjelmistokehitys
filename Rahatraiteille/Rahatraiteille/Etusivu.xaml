<Window x:Class="Rahatraiteille.Etusivu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rahatraiteille"
        mc:Ignorable="d"
        Title="Etusivu" Height="450" Width="800" Closing="Window_Closing" Loaded="Window_Loaded"
         Background="#FFD3D9BD">
    <DockPanel AllowDrop="True">
        <Menu DockPanel.Dock="Top" Height="48">
            <MenuItem>
                <MenuItem.Icon>
                    <Image Source="RahatRaiteille.png" Margin="0,0,-33,-23"/>
                </MenuItem.Icon>
                <MenuItem Header="Etusivulla näet menojesi yhteenvedon" />
            </MenuItem>
            <Separator/>
            <MenuItem Header="Luo kirjaus" FontFamily="Niagara Solid" FontSize="20" Click="MenuItem_Click">
            </MenuItem>
            <Separator/>
            <MenuItem Header="Kategoriat" FontFamily="Niagara Solid" FontSize="20">
                <MenuItem Header="Tällä sivulla voit tarkastella kategorioita, luoda ja poistaa niitä."/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Tarkastele" FontFamily="Niagara Solid" FontSize="20">
                <MenuItem Header="Tarkastele tarkemmin menojasi käyttäen filttereitä."/>
            </MenuItem>
        </Menu>
        <Grid>
            <Popup Margin="10,10,0,13" AllowsTransparency="True" Name="Popup1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="100" PlacementTarget="{Binding ElementName=TimerLable}">
                <Canvas Width="150" Height="100" Background="Beige">
                    <TextBlock Name="text" Width="150" Height="100" TextWrapping="Wrap" Text="Top of the morning to ya" TextAlignment="Center" FontSize="20" FontFamily="Bahnschrift Light"></TextBlock>
                </Canvas>
            </Popup>
            <Label x:Name="TimerLable" Content="0" HorizontalAlignment="Left" Margin="591,197,0,0" VerticalAlignment="Top" Height="77" Width="107" FontSize="20"/>

        </Grid>
    </DockPanel>
</Window>
